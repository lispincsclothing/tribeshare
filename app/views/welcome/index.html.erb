<div class="container-fluid work" id="work">
  <div class="container">
    <div class="row" id="starts">
      <div class="col-md-12 col-sm-12 col-xs-12 work-list">
        <h2 class="text-center portfolio-text">Some current selections ... </h2>
<% @campaigns.each do |campaign| %>
        <div class="col-md-4 col-sm-6 col-xs-12 work-space">
          <a data-lightbox="image-1" href=<%= asset_path(campaign.picture1) %> >
            <div class="featured-img">
              <img src= <%= asset_path(campaign.picture1) %> />
            </div>
            <div class="image-hover">
              <i class="glyphicon glyphicon-eye-open"></i>
            </div>
            <h3> <%=  campaign.header %> </h3>
          </a>
        </div>
        <% end %>


      </div>
    </div>
  </div>
</div>

<div class="container-fluid countspace" id="stats">
  <div class="container">
    <div class="row">
      <div class="col-md-12 countbg">
        <div class="col-xs-12 col-sm-3 col-md-3">
          <div class="counter-item">
            <img src="<%= asset_path('user_icon.png' ) %>" class="round" />
            <div class="timer top_padding bottom_padding" data-from="0" data-refresh-interval="50" data-speed="5000" data-to="300"></div>
            <h5>Members</h5>
          </div>
        </div>
        <div class="col-xs-12 col-sm-3 col-md-3">
          <div class="counter-item">
          <img src="<%= asset_path('heart_icon.png' ) %>" class="round" />
            <div class="timer top_padding bottom_padding" data-from="0" data-refresh-interval="50" data-speed="5000" data-to="47"></div>
            <h5>
              Tribes
            </h5>
          </div>
        </div>

        <div class="col-xs-12 col-sm-3 col-md-3">
          <div class="counter-item">
          <img src="<%= asset_path('tag_icon.png' ) %>" class="round" />
            <div class="timer top_padding bottom_padding" data-from="0" data-refresh-interval="50" data-speed="5000" data-to="141"></div>
            <h5>Shared Items</h5>
          </div>
        </div>

        <div class="col-xs-12 col-sm-3 col-md-3">
          <div class="counter-item">
        <img src="<%= asset_path('tick_icon2.png' ) %>" class="round" />
            <div class="timer top_padding bottom_padding" data-from="0" data-refresh-interval="50" data-speed="5000" data-to="39000"></div>
            <h5>Successful handoffs</h5>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>





<div class="container-fluid features" id="love-story">
  <div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Store your card details</h1>
      <%= form_tag({controller: 'users', action: 'storepayment'}, method: :post, id: 'simplify-payment-form') do %>
      <div>
        <%= label_tag('name', 'Name:') %>
        <%= text_field_tag('name', nil, maxlength: 60, autocomplete: 'off', autofocus: true) %>
      </div>

      <div>
        <%= label_tag('email', 'Email:') %>
        <%= text_field_tag('email', nil, maxlength: 60, autocomplete: 'off', autofocus: true, value: current_user.email) %>
      </div>

        <div>
          <%= label_tag('cc-number', 'Credit Card Number:') %>
          <%= text_field_tag('cc-number', nil, maxlength: 20, autocomplete: 'off', autofocus: true) %>
        </div>
        <div>
          <%= label_tag('cc-cvc', 'CVC:') %>
          <%= text_field_tag('cc-cvc', nil, maxlength: 4, autocomplete: 'off') %>
        </div>
        <div>
          <%= label_tag('cc-exp-month', 'Expiry Date:') %>
          <%= select_month(Date.new(Date.today.year, 1).beginning_of_month, {use_two_digit_numbers: true}, {id: 'cc-exp-month'}) %>
          <%= select_year(Date.today, {start_year: Date.today.year, end_year: Date.today.year+10}, {id: 'cc-exp-year'}) %>
        </div>
        <%= submit_tag('Save My Card Details', id: 'store-payment-btn') %>
      <% end %>
</div>
</div>
</div>
</div>
